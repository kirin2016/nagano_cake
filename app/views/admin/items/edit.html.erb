<h4>商品編集</h4>

  <%= form_with model: @item, url: admin_item_path(@item.id), local: true do |f| %>

  <div class="field">
    <div class="form-group row">
      <div class="col-lg-1"></div>
      <div class="col-lg-3 d-flex align-items-center"><%= f.label :image, "商品画像" %></div>
      <div class="col-lg-7"><%= f.attachment_field :image %></div>
      <div class="col-lg-1"></div>
    </div>

    <div class="form-group row">
      <div class="col-lg-1"></div>
      <div class="col-lg-3 d-flex align-items-center"><%= f.label :name, "商品名" %></div>
      <div class="col-lg-7"><%= f.text_field :name, class: "form-control" %></div>
      <div class="col-lg-1"></div>
    </div>

    <div class="form-group row">
      <div class="col-lg-1"></div>
      <div class="col-lg-3"><%= f.label :introduction, "商品説明" %></div>
      <div class="col-lg-7"><%= f.text_area :introduction, class: "form-control" %></div>
      <div class="col-lg-1"></div>
    </div>

    <div class="form-group row">
      <div class="col-lg-1"></div>
      <div class="col-lg-3 d-flex align-items-center"><%= f.label :genre_id, "ジャンル" %></div>
      <div class="col-lg-7"><%= f.collection_select :genre_id, Genre.all, :id, :name, {include_blank: "選択して下さい"}, {class: "form-control"} %></div>
      <div class="col-lg-1"></div>
    </div>

    <div class="form-group row">
      <div class="col-lg-1"></div>
      <div class="col-lg-3 d-flex align-items-center"><%= f.label :price, "税抜価格" %></div>
      <div class="col-lg-7"><%= f.text_field :price, class: "form-control" %></div>
      <div class="col-lg-1 d-flex align-items-center">円</div>
    </div>

    <div class="form-group row">
      <div class="col-lg-1"></div>
      <div class="col-lg-3 d-flex align-items-center"><%= f.label :is_active, "販売ステータス" %></div>
      <div class="col-lg-7"><%= f.select :is_active,{販売中:true, 販売停止中:false}, {}, {class: "form-control"} %></div>
      <div class="col-lg-1"></div>
    </div>

    <div class="actions center">
      <%= f.submit '変更を保存', class:"btn btn-success btn-lg px-0 w-25" %>
    </div>
  </div>

  <% end %>
