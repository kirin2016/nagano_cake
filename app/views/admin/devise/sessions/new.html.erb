<h4>管理者ログイン</h4>

<%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
  <div class="field">
    <div class="margin-straight">
      <div class="form-group row">
        <div class="col-lg-1"></div>
        <div class="col-lg-3"><%= f.label :email, "メールアドレス" %></div>
        <div class="col-lg-8"><%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %></div>
      </div>

      <div class="form-group row">
        <div class="col-lg-1"></div>
        <div class="col-lg-3"><%= f.label :password, "パスワード" %></div>
        <div class="col-lg-8"><%= f.password_field :password, class:"form-control", autocomplete: "current-password" %></div>
      </div>
    </div>

    <div class="actions row">
      <div class="col-lg-4"></div>
      <div class="col-lg-6"><%= f.submit "ログイン", class:"btn btn-primary w-50" %></div>
    </div>
  </div>
<% end %>


