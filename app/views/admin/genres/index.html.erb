<h4>ジャンル一覧・追加</h4>


  <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
    <div class="center margin-straight form-group row">
      <div class="col-lg-2 col-sm-3"><%= f.label :name, "ジャンル名" %></div>
      <div class="col-lg-2 col-sm-4"><%= f.text_field :name %></div>
      <div class="col-lg-4 col-sm-5"><%= f.submit '新規登録', class:"btn btn-success btn-lg px-0 w-50" %></div>
      <div class="col-lg-4"></div>
    </div>
  <% end %>


  <table class="table table-hover table-inverse" style="width: 400px;">
    <thead>
      <tr>
        <th class="center">ジャンル</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
     <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td class="center"><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success px-0 w-50" %></td>
        </tr>
     <% end %>
    </tbody>
  </table>
