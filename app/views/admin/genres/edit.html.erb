<h4>ジャンル編集</h4>


  <%= form_with model: @genre, url: admin_genre_path(@genre.id), local: true do |f| %>
    <div class="center margin-straight form-group row">
      <div class="col-lg-2 col-sm-3"><%= f.label :name, "ジャンル名" %></div>
      <div class="col-lg-2 col-sm-4"><%= f.text_field :name %></div>
      <div class="col-lg-4 col-sm-5"><%= f.submit '変更を保存', class:"btn btn-success btn-lg px-0 w-50" %></div>
      <div class="col-lg-4"></div>
    </div>
  <% end %>