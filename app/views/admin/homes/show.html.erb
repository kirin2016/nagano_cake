  <h4><%= @customer.last_name + @customer.first_name %>さんの注文履歴一覧</h4>

  <table class="table table-hover table-inverse margin-straight field">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <% @sum_amount = 0 %>
        <tr>
          <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %></td>
          <td><%= order.customer.last_name + order.customer.first_name %></td>
          <td>
            <% order.order_details.all.each do |order_detail| %>
              <% @sum_amount += order_detail.amount %>
            <% end %>
            <%= @sum_amount %>
          </td>
          <td><%= order.order_status_i18n %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @orders %>

  <div class="center mt-5">
    <%= link_to "全会員の注文履歴一覧に戻る", admin_path, class:"btn btn-primary px-0 w-25" %>
  </div>

