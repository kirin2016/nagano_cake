  <h4>注文履歴一覧</h4>

  <table class="table table-hover table-inverse margin-straight field">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <% @sum_amount = 0 %>
        <tr>
          <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %></td>
          <td><%= link_to order.customer.last_name + order.customer.first_name, admin_home_path(order.customer_id) %></td>
          <td>
            <% order.order_details.all.each do |order_detail| %>
              <% @sum_amount += order_detail.amount %>
            <% end %>
            <%= @sum_amount %>
          </td>
          <td><%= order.order_status_i18n %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @orders %>