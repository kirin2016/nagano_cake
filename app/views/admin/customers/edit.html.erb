<h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>

  <%= form_with model: @customer, url: admin_customer_path(@customer.id), local: true do |f| %>

  <div class="margin-left">
    <div class="form-group row">
      <div class="col-lg-2">会員ID</div>
      <div class="col-lg-2"></div>
      <div class="col-lg-8"><%= @customer.id %></div>
    </div>

    <div class="form-group row">
      <div class="col-lg-2 d-flex align-items-center"><%= f.label :last_name, "氏名" %></div>
      <div class="col-lg-2 d-flex align-items-center justify-content-end">(性)</div>
      <div class="col-lg-3"><%= f.text_field :last_name, class: "form-control" %></div>
      <div class="col-lg-2 text-right d-flex align-items-center justify-content-end">(名)</div>
      <div class="col-lg-3"><%= f.text_field :first_name, class: "form-control" %></div>
    </div>

    <div class="form-group row">
      <div class="col-lg-2 d-flex align-items-center"><%= f.label :last_name_kana, "フリガナ" %></div>
      <div class="col-lg-2 d-flex align-items-center justify-content-end">(セイ)</div>
      <div class="col-lg-3"><%= f.text_field :last_name_kana, class: "form-control" %></div>
      <div class="col-lg-2 text-right d-flex align-items-center justify-content-end">(メイ)</div>
      <div class="col-lg-3"><%= f.text_field :first_name_kana, class: "form-control" %></div>
    </div>

    <div class="form-group row">
      <div class="col-lg-2"><%= f.label :postal_code, "郵便番号" %></div>
      <div class="col-lg-2"></div>
      <div class="col-lg-3"><%= f.text_field :postal_code, class: "form-control" %></div>
    </div>

    <div class="form-group row">
      <div class="col-lg-2 d-flex align-items-center">住所</div>
      <div class="col-lg-2 d-flex align-items-center justify-content-end">(都道府県)</div>
      <div class="col-lg-3"><%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, {}, {class: "form-control"} %></div>
      <div class="col-lg-2 d-flex align-items-center justify-content-end">(市区町村)</div>
      <div class="col-lg-3"><%= f.text_field :address_city, class: "form-control" %></div>
    </div>

    <div class="form-group row">
      <div class="col-lg-2"></div>
      <div class="col-lg-2 d-flex align-items-center justify-content-end">(町名番地)</div>
      <div class="col-lg-3"><%= f.text_field :address_street, class: "form-control" %></div>
    </div>

    <div class="form-group row">
      <div class="col-lg-2"></div>
      <div class="col-lg-2 d-flex align-items-center justify-content-end">(建物名)</div>
      <div class="col-lg-8"><%= f.text_field :address_building, class: "form-control" %></div>
    </div>

    <div class="form-group row">
      <div class="col-lg-2 d-flex align-items-center"><%= f.label :telephone_number, "電話番号" %></div>
      <div class="col-lg-2"></div>
      <div class="col-lg-3"><%= f.text_field :telephone_number, class: "form-control" %></div>
    </div>

    <div class="form-group row">
      <div class="col-lg-2 d-flex align-items-center"><%= f.label :email, "メールアドレス" %></div>
      <div class="col-lg-2"></div>
      <div class="col-lg-3"><%= f.text_field :email, class: "form-control" %></div>
    </div>

    <div class="form-group row">
      <div class="col-lg-2 d-flex align-items-center"><%= f.label :is_deleted, "会員ステータス" %></div>
      <div class="col-lg-2"></div>
      <div class="col-lg-3"><%= f.select :is_deleted,{有効:false, 退会:true}, {}, {class: "form-control"} %></div>
    </div>

    <div class="margin-straight"></div>

    <div class="actions row">
      <div class="col-lg-4"></div>
      <div class="col-lg-8"><%= f.submit '変更を保存', class:"btn btn-success btn-lg px-0 w-25" %></div>
    </div>
  </div>


  <% end %>
