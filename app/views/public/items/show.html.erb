  <div class="row margin-straight">
    <%= render 'public/items/sidebar', genres: @genres %>
    <div class="col-lg-4 image_size">
      <%= attachment_image_tag @item, :image %>
    </div>
    <div class="col-lg-5">
      <h3><%= @item.name %></h3>
      <div class="margin-straight"><%= @item.introduction %></div>
      <div class="d-flex align-items-center">
        <h3><%= @item.add_tax_price.to_s(:delimited, delimiter: ',') %>円</h3>
        <div>(税込)</div>
      </div>
      <div class="margin-straight">
        <%= form_with model: @cart_item, local: true do |f| %>
	    	  <%= f.hidden_field :item_id, value:@item.id %>
	    	  <%= f.select :amount, *[1..99], {:prompt => "個数選択"} %>
	    	  <%= f.submit "カートに入れる", class:"btn btn-success px-0 w-50 ml-3" %>
	      <% end %>
      </div>

    </div>
  </div>
